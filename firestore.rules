rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function isAdminEmail() {
      return signedIn()
        && request.auth.token.email != null
        && request.auth.token.email == "subhanahmadofficialcompany@gmail.com";
    }

    match /products/{productId} {
      allow read: if (
        resource.data.isVisible == true
        && resource.data.isDeleted == false
      ) || isAdminEmail();
      allow create, update, delete: if isAdminEmail();
    }

    match /notifications/{notificationId} {
      allow read: if resource.data.isActive == true || isAdminEmail();
      allow create, update, delete: if isAdminEmail();
    }

    match /mailboxes/{email}/notifications/{notificationId} {
      allow read: if (
        signedIn()
        && request.auth.token.email != null
        && request.auth.token.email == email
      ) || isAdminEmail();
      allow create, update, delete: if isAdminEmail();
    }

    match /carts/{uid}/items/{itemId} {
      allow read, write: if signedIn() && request.auth.uid == uid;
    }

    match /orders/{orderId} {
      allow read: if signedIn() && (
        resource.data.uid == request.auth.uid || isAdminEmail()
      );
      allow update: if isAdminEmail();
      allow create, delete: if false;
    }

    match /users/{uid} {
      allow read, write: if signedIn() && (
        request.auth.uid == uid || isAdminEmail()
      );
    }

    match /adminSettings/{docId} {
      allow read: if true;
      allow write: if isAdminEmail();
    }

    match /adminConfig/{docId} {
      allow read, write: if false;
    }

    match /contactMessages/{contactId} {
      allow read: if isAdminEmail();
      allow update: if isAdminEmail();
      allow create, delete: if false;
    }
  }
}
